---
import { getCollection } from 'astro:content';
import PlantLayout from '../../layouts/PlantLayout.astro';

export async function getStaticPaths() {
  const plants = await getCollection('plants');
  return plants.map((plant) => ({
    params: { slug: plant.slug },
    props: { plant },
  }));
}

const { plant } = Astro.props;
const { Content } = await plant.render();
---

<PlantLayout title={plant.data.title}>
  <a href="/" class="text-stone-500 hover:text-stone-700 text-sm">â† Back</a>
  
  {plant.data.image && (
    <img 
      src={plant.data.image} 
      alt={plant.data.title}
      class="w-full h-48 object-cover rounded-lg mt-4 mb-6"
    />
  )}
  
  <h1 class="text-2xl font-bold text-stone-800">{plant.data.title}</h1>
  
  <div class="flex gap-3 mt-3 mb-6">
    <span class="bg-stone-100 px-3 py-1 rounded-full text-sm">ğŸ’§ {plant.data.water}</span>
    <span class="bg-stone-100 px-3 py-1 rounded-full text-sm">â˜€ï¸ {plant.data.light}</span>
    <span class={`px-3 py-1 rounded-full text-sm ${
      plant.data.difficulty === 'easy' ? 'bg-green-100 text-green-700' :
      plant.data.difficulty === 'medium' ? 'bg-yellow-100 text-yellow-700' :
      'bg-red-100 text-red-700'
    }`}>
      {plant.data.difficulty}
    </span>
  </div>
  
  <article class="prose prose-stone prose-sm max-w-none">
    <Content />
  </article>
</PlantLayout>
